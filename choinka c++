#include <iostream>
using namespace std;
int main()
{
    int i,j,k;
    for(int i=1;i<=7;i++){
        for(k=i;k<=6;k++){
            cout<<(" ");
        }
        for (int j=1;j<=i;j++){
            cout<<("* ");
        }
        cout<<("\n");
    }
    
    for(int i=3;i<=7;i++){
        for(k=i;k<=6;k++){
            cout<<(" ");
        }
        for (int j=1;j<=i;j++){
            cout<<("* ");
        }
        cout<<("\n");
    }
    for(int i=4;i<=7;i++){
        for(k=i;k<=6;k++){
            cout<<(" ");
        }
        for (int j=1;j<=i;j++){
            cout<<("* ");
        }
        cout<<("\n");
    }
    for(i=1;i<=3;i++){
        for (k=1;k<=5;k++)
        cout<<(" ");
        for (j=1;j<=3;j++){
            cout<<("#");
        }
        cout<<("\n");
    }
    
}
